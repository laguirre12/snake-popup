{
  "manifest_version": 2,
  "name": "Snake Popup",
  "version": "1.0",
  "author": "laguirre",

  "description": "The classic Snake Game played in a popup in browser",

  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },

  "icons": {
    "16"  : "images/snake_logo/icon_snake-16.png",
    "48"  : "images/snake_logo/icon_snake-48.png",
    "128" : "images/snake_logo/icon_snake-128.png"
  },

  "browser_action": {
    "default_title" : "Snake Popup",
    "default_icon"  : "images/snake_logo/icon_snake-16.png",
    "default_popup" : "html/popup.html"
  },

  "web_accessible_resources":[
    "fonts/Games.tff"
  ],

  "permissions": [
    "storage",
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/"
  ]
}
